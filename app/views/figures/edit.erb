<h1>Edit your <%=@figure.name%></h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label> Figure Name </label>
  <input type="text" name="figure[name]" value='<%= @figure.name %>' id="figure_name"> </br>
  <h2>Select relevant titles:</h2>
  <% Title.all.each do |title| %>
  <p>
    <label><%=title.name%></label>
  <input type="checkbox" name="figure[title_ids][]" value="<%= title.id%>" <%='checked' if @figure.titles.include?(title) %> id="<%= title.name%>" ></input>
  </p>
  <% end %>
  <h3>And/or Create a new title:</h3>
  <label>name:</label>
    <input type="text" name="title[name]"</input>

  <h2>Select relevant landmarks:</h2>
  <% Landmark.all.each do |landmark| %>
  <p>
    <label><%=landmark.name%></label>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %> id="<%= landmark.name%>" ></input>
  </p>
  <% end %>
  <h3>And/or Create a new landmark:</h3>
  <label>name:</label>
    <input type="text" name="landmark[name]" id="new_landmark"></input>

  <p>

  <input type="submit" id="Edit Figure" value="Edit Figure">
</form>
