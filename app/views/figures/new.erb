<h1>Add a New Figure</h1>

<form action="/figures" method="POST">
  <label> Figure Name </label>
  <input type="text" id="figure_name" name="figure[name]"> </br>

<h2>Select relevant titles:</h2>
<% Title.all.each do |title| %>
<p>
  <label><%=title.name%></label>
<input type="checkbox" name="figure[title_ids][]" value="<%= title.id%>" id="title_<%= title.id%>" ></input>
</p>
<% end %>
<h3>And/or Create a new title:</h3>
<label>name:</label>
  <input type="text" name="title[name]" id="new_title"></input>

<h2>Select relevant landmarks:</h2>
<% Landmark.all.each do |landmark| %>
<p>
  <label><%=landmark.name%></label>
<input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id%>" id="landmark_<%= landmark.id%>" ></input>
</p>
<% end %>
<h3>And/or Create a new landmark:</h3>
<label>name:</label>
  <input type="text" name="landmark[name]" id="new_landmark"></input>

<p>
  <input type="submit" value="Create New Figure">
</p>
</form>
